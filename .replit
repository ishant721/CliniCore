modules = ["web", "nodejs-20", "python-3.12"]
run = "python3 manage.py runserver 0.0.0.0:3000"

[nix]
channel = "stable-25_05"
packages = ["cacert"]

[deployment]
run = ["sh", "-c", "python3 manage.py runserver 0.0.0.0:3000"]

[[ports]]
localPort = 3000
externalPort = 80

[workflows]
runButton = "Django Server"

[[workflows.workflow]]
name = "Django Server"
author = 46487498
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python manage.py collectstatic --noinput"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python manage.py migrate"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python manage.py runserver 0.0.0.0:5000"
